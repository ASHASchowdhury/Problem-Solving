#include<bits/stdc++.h>
using namespace std;
 
int main(){
    ios::sync_with_stdio(false);
    cin.tie(nullptr);
    int t;
    cin>>t;
    while(t--){
        int s;
        cin>>s;
        string a;
        cin>>a;
        int l=-1,f=-1;
         f=a.find('B');
         l=a.rfind('B');
        int ans=l-f+1;
        cout<<ans<<endl;
    }
}
